// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.text annotations in model Account below
  // Further reading: 
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

model Example {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

// Necessary for Next auth
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? //@db.Text
  access_token      String? //@db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? //@db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  discordName   String?   @unique
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  usersOnTeam UsersOnTeam[]

  usersWithRole UsersWithRole[]

  authoredCalendarEntries CalendarEntry[]

  receivedCalendarEntries UsersReceivedCalendarEntry[]

  clearance Clearance @default(User)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Clearance {
  User
  Staff
  Moderator
  Admin
  Technician
}

// Teams
model UsersOnTeam {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  teamId String @db.ObjectId
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
}

model Team {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?

  usersOnTeam UsersOnTeam[]

  roles     Role[]
  createdAt DateTime @default(now())

  teamsWithCalendarEntry TeamWithCalendarEntry[]
}

// Roles
model UsersWithRole {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  roleId String @db.ObjectId
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)
}

model Role {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?

  teamId        String          @db.ObjectId
  team          Team            @relation(fields: [teamId], references: [id], onDelete: Cascade)
  usersWithRole UsersWithRole[]
  
  clearance Clearance @default(User)
  rolesWithCalendarEntry RoleWithCalendarEntry[]
}

// Calendar Stuff
model UsersReceivedCalendarEntry {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  userId          String        @db.ObjectId
  user            User          @relation(fields: [userId], references: [id])
  calendarEntryId String        @db.ObjectId
  calendarEntry   CalendarEntry @relation(fields: [calendarEntryId], references: [id])
}

model TeamWithCalendarEntry {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  teamId          String        @db.ObjectId
  team            Team          @relation(fields: [teamId], references: [id])
  calendarEntryId String        @db.ObjectId
  calendarEntry   CalendarEntry @relation(fields: [calendarEntryId], references: [id])
}

model RoleWithCalendarEntry {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  roleId          String        @db.ObjectId
  role            Role          @relation(fields: [roleId], references: [id])
  calendarEntryId String        @db.ObjectId
  calendarEntry   CalendarEntry @relation(fields: [calendarEntryId], references: [id])
}

model CalendarEntry {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  endsAt      DateTime // utc time
  name        String
  description String?

  authorUserId String
  author       User   @relation(fields: [authorUserId], references: [id])

  usersReceivedCalendarEntry UsersReceivedCalendarEntry[]
  teamsWithCalendarEntry TeamWithCalendarEntry[]
  rolesWithCalendarEntry RoleWithCalendarEntry[]
}
